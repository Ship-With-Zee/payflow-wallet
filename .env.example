# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=payflow
DB_USER=payflow
DB_PASSWORD=payflow123-change-in-production

# Redis
REDIS_URL=redis://redis:6379

# RabbitMQ
RABBITMQ_URL=amqp://payflow:payflow123@rabbitmq:5672

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-at-least-256-bits
JWT_EXPIRES_IN=24h

# Services
AUTH_SERVICE_URL=http://auth-service:3004
WALLET_SERVICE_URL=http://wallet-service:3001
TRANSACTION_SERVICE_URL=http://transaction-service:3002
NOTIFICATION_SERVICE_URL=http://notification-service:3003

# CORS
CORS_ORIGIN=*

# Environment
NODE_ENV=development

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# OR SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SSL/TLS (for production)
SSL_KEY_PATH=/certs/server.key
SSL_CERT_PATH=/certs/server.cert

# Logging
LOG_LEVEL=info
